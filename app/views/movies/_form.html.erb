<%= render 'shared/errors', obj: @movie %> 

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@movie, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :name %>
    </div>
    <div class="col-sm-5">
      <%= f.text_field :name, class: "form-control", placeholder: "Name of movie", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :description %>
    </div>
    <div class="col-sm-5">
      <%= f.text_area :description, rows: 7, class: "form-control", placeholder: "Description of movie" %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :actors %>
    </div>
    <div class="col-sm-5">
      <%= f.text_field :actors, class: "form-control", placeholder: "Name of actors", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :director %>
    </div>
    <div class="col-sm-5">
      <%= f.text_field :director, class: "form-control", placeholder: "Name of director", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :language %>
    </div>
    <div class="col-sm-5">
    <%= f.text_field :language, class: "form-control", placeholder: "Language of movie", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :duration %>
    </div>
    <div class="col-sm-5">
    <%= f.number_field :duration, class: "form-control", placeholder: "Duration of movie", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :release_date %>
    </div>
    <div class="col-sm-5">
    <%= f.date_select :release_date, class: "form-control", placeholder: "Release date of movie", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
       <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
    <% end %>
    <div class="col-xs-2 col-xs-offset-2">
      [ <%= link_to "Return to movies listing", movies_path %> ]
    </div>
</div>
