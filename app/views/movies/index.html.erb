<h1 align="center">Movies</h1>
<% @movies.each do |movie| %>
<div class="row">
<div class="col-xs-8 col-xs-offset-2">
<div class="well well-lg">
<div class="movie-name">
<%= link_to movie.name, movie_path(movie) %>
</div>
<div class="movie-body">
<%= truncate(movie.description, length: 100) %>
</br> Movie length: <%= movie.duration %> mins
</div>
<div class="movie-actions">
<%= link_to "Edit this movie", edit_movie_path(movie), class: "btn btn-xs btn-primary" %>
<%= link_to "Delete this movie", movie_path(movie), method: :delete,
data: { confirm: "Are you sure you want to delete the movie?"},
class: "btn btn-xs btn-danger" %>
</div>
</div>
</div>
</div>
<% end %>
