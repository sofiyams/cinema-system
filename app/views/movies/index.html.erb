<h1 align="center">Movies</h1>
  <%= link_to "New Movie", new_movie_path%>
<div align="center">
  <%= will_paginate %>
</div>
<% @movies.each do |movie| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="movie-name">
            <%= link_to movie.name, movie_path(movie) %>
        </div>
        <div class="movie-body">
          <%= truncate(movie.description, length: 100) %>
          </br> Movie length: <%= movie.duration %> mins
          <div class="movie-meta-details">
            <small> Created by: <%= movie.user.username if movie.user %>,
                  <%= time_ago_in_words(movie.created_at)%> ago,
                  last updated: <%= time_ago_in_words(movie.updated_at) %> ago </small>
          </div>
        </div>
        <div class="movie-actions">
          <%= link_to "Edit this movie", edit_movie_path(movie), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete this movie", movie_path(movie), method: :delete,
              data: { confirm: "Are you sure you want to delete the movie?"},
              class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div align="center">
  <%= will_paginate %>
</div>
