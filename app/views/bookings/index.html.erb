<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Movie</th>
      <th>Showtime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.user.username %></td>
        <td><%= booking.movie.name %></td>
        <td><%= booking.showtime.form_dropdown %></td>

        <td><%= link_to 'Show', user_booking_path(@user, booking) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>